{
    "name": "@pizza/workspace",
    "version": "0.0.1",
    "license": "UNLICENSED",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "format": "prettier --write \"**/*.{css,html,js,json,jsx,ts,tsx}\""
    },
    "dependencies": {
        "@chakra-ui/react": "1.7.1",
        "@emotion/react": "11.5.0",
        "@emotion/styled": "11.3.0",
        "framer-motion": "4.1.17",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-redux": "7.2.6",
        "react-router": "6.0.2",
        "redux": "4.1.2"
    },
    "devDependencies": {
        "@storybook/addon-actions": "6.3.12",
        "@storybook/addon-essentials": "6.3.12",
        "@storybook/addon-links": "6.3.12",
        "@storybook/builder-webpack5": "6.3.12",
        "@storybook/manager-webpack5": "6.3.12",
        "@storybook/react": "6.3.12",
        "@types/react": "17.0.34",
        "@types/react-dom": "17.0.11",
        "parcel": "2.0.1",
        "prettier": "2.4.1",
        "typescript": "4.4.4"
    },
    "resolutions": {
        "@storybook/**/webpack": "^5.0.0"
    },
    "targets": {
        "default": {
            "source": "./src/index.html"
        },
        "main": false
    },
    "prettier": {
        "arrowParens": "avoid",
        "printWidth": 120,
        "tabWidth": 4,
        "trailingComma": "all"
    }
}
